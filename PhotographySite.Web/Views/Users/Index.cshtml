@model IEnumerable<Photography.Core.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Users
    
<a href="@Url.Action("Create")" data-toggle="tooltip" title="create" class="pull-right"><i class="fa fa-fw fa-plus"></i></a>

</h2>

<table class="table table-striped table-hover">
    <tr>
        <th>
            Name
        </th>
        <th>
            EmailAddress
        </th>
        <th>
            Discount
        </th>
        <th>
            Actions
        </th>
    </tr>

    @foreach (var item in Model) {
        <tr onclick="document.location=@Url.Action("Details", new { id = item.Id }); return false;">
            <td>
                @item.Name
            </td>
            <td>
                @item.EmailAddress
            </td>
            <td>
                @String.Format("{0:F}", item.Discount ?? 0)%
            </td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.Id })" data-toggle="tooltip" title="edit"><i class="fa fa-fw fa-pencil"></i></a>
                <a href="@Url.Action("Delete", new { id = item.Id })" data-toggle="tooltip" title="delete"><i class="fa fa-fw fa-trash-o"></i></a>
            </td>
        </tr>
    }

</table>

