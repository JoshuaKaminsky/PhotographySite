@model IEnumerable<Photography.Core.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Users
            <a class="btn btn-default pull-right" href="@Url.Action("Create")" data-toggle="tooltip" title="new user" ><i class="fa fa-fw fa-plus"></i>New</a>
        </h3>
    </div>

    <table class="table table-striped table-hover table-condensed ">
        <thead>
            <tr>
                <th>Name</th>
                <th>EmailAddress</th>
                <th>Discount</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody data-link="row" class="rowlink">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.Id })">@item.Name</a>
                    </td>
                    <td>
                        @item.EmailAddress
                    </td>
                    <td>
                        @String.Format("{0:#0%}", item.Discount ?? 0)
                    </td>
                    <td>
                        <a data-id="@item.Id" data-toggle="modal" class="resetPasswordButton" title="reset password"><i class="fa fa-fw fa-refresh"></i></a>
                        <a data-id="@item.Id" data-toggle="modal" class="deleteUserButton" title="delete"><i class="fa fa-fw fa-trash-o"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@Html.Partial("_ModalDeleteUser")
@Html.Partial("_ModalResetPassword")

