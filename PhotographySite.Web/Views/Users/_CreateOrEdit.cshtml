@model Photography.Core.Models.User

<div class="form-group">
    <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-fw fa-user" data-tooltip="true" title="name"></i></span>
        <input name="Name" type="text" class="form-control" placeholder="name..." required value="@Model.Name">
    </div>
</div>

<div class="form-group">
    <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-fw fa-envelope-o" data-tooltip="true" title="email"></i></span>
        <input name="EmailAddress" type="email" class="form-control" placeholder="email..." required value="@Model.EmailAddress">
    </div>
</div>

<div class="form-group">
    <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-fw fa-asterisk" data-tooltip="true" title="discount"></i></span>
        <input name="Discount" type="number" class="form-control" placeholder="discount..." value="@Model.Discount" min="0" max="1" step=".05" autocomplete="none">
    </div>
</div>

<div class="form-group">
    <div class="input-group">
        <label> @Html.CheckBoxFor(model => model.IsActive) Enabled</label>
    </div>
</div>